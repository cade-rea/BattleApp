    <com.caderea.battleapp.view.NewBattleView
            android:id="@+id/newBattleView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.caderea.battleapp.queue.QueueDrawer
                android:id="@+id/player1QDrawer2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Queue"
        />

        <com.caderea.battleapp.queue.QueueDrawer
                android:id="@+id/player2QDrawer2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Queue"
        />

        <ProgressBar
                android:id="@+id/tickProgressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:progress="50"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

    </com.caderea.battleapp.view.NewBattleView>


    <RelativeLayout
        android:id="@+id/battle_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newBattleView">

        <Button
            android:id="@+id/button1"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Button 1"
            android:onClick="buttonPushed"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Button 2"
            android:onClick="buttonPushed"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/button1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Button 3"
            android:onClick="buttonPushed"
            android:layout_below="@id/button1"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Button 4"
            android:onClick="buttonPushed"
            android:layout_toRightOf="@+id/button3"
            android:layout_below="@id/button2"/>
    </RelativeLayout>

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Stop"
        android:onClick="buttonPushed"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/battle_buttons" />

</RelativeLayout>
